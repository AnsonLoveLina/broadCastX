docker run -p 3306:3306 --name broadcastx-mysql -e MYSQL_ROOT_PASSWORD=123456 -d mysql
docker exec -it broadcastx-mysql bash
mysql -u root -p 123456
ALTER USER 'root'@'localhost' IDENTIFIED BY '123456';
CREATE USER 'broadcastx'@'%' IDENTIFIED WITH mysql_native_password BY '123456';
GRANT ALL PRIVILEGES ON *.* TO 'broadcastx'@'%';
create database database1;
